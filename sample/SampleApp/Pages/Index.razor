@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<button @onclick="@(() => count++)">Click @count</button>

@if (ready)
{
    <p>
        <input @bind="someText" />
        [@someText]
    </p>
}

@code {
    int count;
    bool ready;
    string someText = "default";

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        ready = true;
    }
}
